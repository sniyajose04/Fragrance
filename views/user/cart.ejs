    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const qtyInputs = document.querySelectorAll('.qty-input');
            qtyInputs.forEach(function (input) {
                input.addEventListener('change', function () {
                    const qty = parseInt(this.value);
                    const priceElement = this.closest('tr').querySelector('.price span');
                    const totalPriceElement = this.closest('tr').querySelector('.total-price');
                    const price = parseFloat(priceElement.textContent);
                    const totalPrice = qty * price;
                    totalPriceElement.textContent = totalPrice.toFixed(2);


                    updateCartTotals();
                });
            });
        });

        function updateCartTotals() {

            const totalPrices = document.querySelectorAll('.total-price');
            let subtotal = 0;


            totalPrices.forEach(function (totalPrice) {
                subtotal += parseFloat(totalPrice.textContent);
            });


            document.getElementById('cart-subtotal').textContent = subtotal.toFixed(2);
            document.getElementById('cart-total').textContent = subtotal.toFixed(2);
        }

    </script>

    <script>
        
        function confirmDelete(productId) {
    const swalWithBootstrapButtons = Swal.mixin({
        customClass: {
            confirmButton: "btn btn-success",
            cancelButton: "btn btn-danger"
        },
        buttonsStyling: false
    });

    swalWithBootstrapButtons.fire({
        title: "Are you sure?",
        text: "You won't be able to revert this!",
        icon: "warning",
        showCancelButton: true,
        confirmButtonText: "Yes, delete it!",
        cancelButtonText: "No, cancel!",
        reverseButtons: true
    }).then((result) => {
        if (result.isConfirmed) {
            // Redirect to the endpoint to remove the product from the wishlist
            window.location.href = '/removeFromCart?id=' + productId;
        } else if (result.dismiss === Swal.DismissReason.cancel) {
            // Show cancellation message
            Swal.fire(
                "Cancelled",
                "Your item is safe :)",
                "error"
            );
        }
    });
}


        function increaseQuantity(event, productId, max) {
            console.log('productId ', productId);
            console.log('max:', max)

            var inputElement = event.target.parentNode.querySelector('.quantity-input');
            var currentQuantity = parseInt(inputElement.value);
            var priceElement = event.target.closest('tr').querySelector('.price span');
            var subtotalElement = event.target.closest('tr').querySelector('.total-price');
            var price = parseFloat(priceElement.textContent);

            if (currentQuantity < max) {

                inputElement.value = currentQuantity + 1;
                var newQuantity = parseInt(inputElement.value);
                var newSubtotal = newQuantity * price;
                subtotalElement.textContent = newSubtotal.toFixed(2);
                updateQuantity(productId, 'up');
                updateCartTotals();

            }
        }


        function decreaseQuantity(event, productId) {
            var inputElement = event.target.parentNode.querySelector('.quantity-input');
            var currentQuantity = parseInt(inputElement.value);
            var priceElement = event.target.closest('tr').querySelector('.price span');
            var subtotalElement = event.target.closest('tr').querySelector('.total-price');
            var price = parseFloat(priceElement.textContent);

            if (currentQuantity > 1) {
                inputElement.value = currentQuantity - 1;
                var newQuantity = parseInt(inputElement.value);
                var newSubtotal = newQuantity * price;
                subtotalElement.textContent = newSubtotal.toFixed(2);
                updateQuantity(productId, 'down');
                updateCartTotals();
            }

        }

            document.addEventListener('DOMContentLoaded', function () {

                updateCartTotals();
            });


            async function updateQuantity(productId, direction) {

                try {
                    console.log('inside update qty');
                    const response = await fetch('/updatequantity', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({ productId, direction }),
                    });


                    if (!response.ok) {
                        console.error('Failed to update item quantity : ', response.statusText);
                    } else {
                        const responseData = await response.json();
                        console.log(responseData);
                    }
                } catch (error) {
                    console.error('Error:', error.message)
                }
            }



    </script>





