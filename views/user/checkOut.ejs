        function placeOrder(addressId, totalAmount, paymentMethod) {
    console.log([addressId, totalAmount, paymentMethod]);

    var productIds = [];
    var productQtys = [];

    var productIdElements = document.querySelectorAll('.product-id');
    var productQtyElements = document.querySelectorAll('.product-qty');

    productIdElements.forEach(function (productIdElement, index) {
        var productId = productIdElement.textContent;
        var productQty = productQtyElements[index].textContent;

        productIds.push(productId);
        productQtys.push(productQty);
    });

    $.ajax({
        url: "/placeorder",
        method: "POST",
        data: {
            addressId: addressId,
            totalAmount: totalAmount,
            paymentMethod: paymentMethod,
            productIds: productIds,
            productQtys: productQtys
        },
        success: function (response) {
            console.log('Response:', response);

            if (response.message === "Order placed successfully") {
                Swal.fire({
                    icon: 'success',
                    title: 'Success',
                    text: 'Order placed successfully!'
                });
                setTimeout(function () {
                    window.location.href = '/userDetail';
                }, 3000);
                
            } else if (totalAmount>1000) {
                Swal.fire({
                    icon: 'error',
                    title: 'Payment Error',
                    text: 'Cash on delivery is not possible on orders above 1000.'
                });
                
            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Order Failed',
                    text: 'There was an issue placing your order. Please try again.'
                });
            }
        },
        error: function (error) {
            console.error('Error:', error);
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: 'An error occurred while placing your order. Please try again.'
            });
        }
    });
}



