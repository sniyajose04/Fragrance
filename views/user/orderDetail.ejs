                                                                <span class="badge rounded-pill alert-success text-success"><%= order.paymentStatus %></span>
                                                            </dt>
                                                        </dl>
                                                    </article>
                                                </td>
                                            </tr>
                                        <% } %>

                                        <div class="h-25 pt-4">
                                            <a href="/shop" class="btn btn-sm">Continue Shopping</a>
                                           
                     
                         </div>
                                    </tbody>
                                    
                                    
                                  <br>  
                                    

                                </table>
                            </div> 
                        </div>

                    </div>
                </div>

            </div>
        </div>
