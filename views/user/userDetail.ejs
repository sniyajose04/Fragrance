                text: "An unexpected error occurred. Please try again.",
                icon: 'error',
                confirmButtonText: 'OK'
            });
        }
    } else {
        Swal.fire({
            title: 'Error!',
            text: "Please fix the validation errors before submitting.",
            icon: 'error',
            confirmButtonText: 'OK'
        });
    }
});




