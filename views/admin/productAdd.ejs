        </section>


                <script>
                    async function previewImages(event) {
                        var previewArea = document.getElementById('imagePreview');
                        previewArea.innerHTML = ''; // Clear previous preview
                
                var files = event.target.files;
                for (var i = 0; i < files.length; i++) {
                    var file = files[i];
                    var reader = new FileReader();
        
                    reader.onload = async function(e) {
                        var imageContainer = document.createElement('div');
                        imageContainer.className = 'image-container';
        
                        var image = document.createElement('img');
                        image.src = e.target.result;
        
                        // Set image width and height for better display
                        image.style.width = '100px';
                        image.style.height = 'auto';
        
                        image.className = 'preview-image';
                        imageContainer.appendChild(image);
        
                        var deleteButton = document.createElement('button');
                        deleteButton.textContent = 'Delete';
                        deleteButton.className = 'btn btn-danger btn-sm mt-2';
                        deleteButton.onclick = function() {
                            deleteImage(imageContainer);
                        };
                        imageContainer.appendChild(deleteButton);
        
                        previewArea.appendChild(imageContainer);
                    };
        
                    reader.readAsDataURL(file);
                }
            }
        
            function deleteImage(imageContainer) {
                imageContainer.remove();
               
            }
                </script>


        <script>
            function validateForm() {

                var producttitle = document.getElementById("producttitle");
                var Description = document.getElementById("Description");
                var regularPrice = document.getElementById("regularPrice");
                var promotionalPrice = document.getElementById("promotionalPrice");
                var stock = document.getElementById("stock");
                var category = document.getElementById("category");
                var productForm = document.getElementById("productForm");
                var images = document.getElementById("images")

                let producttitleError = document.getElementById('product_titleError');
                let DescriptionError = document.getElementById('DescriptionError');
                let regularPriceError = document.getElementById('regularPriceError');
                let promotionalPriceError = document.getElementById('promotionalPriceError');
                let StockError = document.getElementById('StockError');
                let CategoryError = document.getElementById("CategoryError");
                let imageError = document.getElementById("imageError")

                if (producttitle.value.trim() === '' || producttitle.value === 'null') {
                    producttitleError.innerHTML = "productName is required";
                } else {
                    producttitleError.innerHTML = "";
                }

                if (Description.value.trim() === '') {
                    DescriptionError.innerHTML = "Description is required";
                } else if (Description.value.trim().length <= 20) {
                    DescriptionError.innerHTML = "Description should be more than 20 characters";
                } else {
                    DescriptionError.innerHTML = "";
                }

                if (stock.value.trim() === '') {
                    StockError.innerHTML = "Stock quantity is required";
                } else if (isNaN(stock.value.trim()) || stock.value.trim() <= 0) {
                    StockError.innerHTML = "Invalid stock quantity";
                } else {
                    StockError.innerHTML = "";
                }

                if (regularPrice.value.trim() === '') {
                    regularPriceError.innerHTML = "regularPrice is required";
                } else if (isNaN(regularPrice.value.trim()) || regularPrice.value.trim() <= 0) {
                    regularPriceError.innerHTML = "Invalid regularPrice";
                } else {
                    regularPriceError.innerHTML = "";
                }

                if (promotionalPrice.value.trim() === '') {
                    promotionalPriceError.innerHTML = "promotionalPrice is required";
                } else if (isNaN(promotionalPrice.value.trim()) || promotionalPrice.value.trim() <= 0) {
                    promotionalPriceError.innerHTML = "Invalid promotionalPrice";
                } else {
                    promotionalPriceError.innerHTML = "";
                }

                if (category.value.trim() === '') {
                    CategoryError.innerHTML = "Please select a category";
                } else {
                    CategoryError.innerHTML = "";
                }

                if (images.files.length === 0) {
                    imageError.innerHTML = "Please upload an image";
                } else {
                    imageError.innerHTML = "";
                }


                // Submit the form if all validations pass
                if (producttitleError.innerHTML === "" && DescriptionError.innerHTML === "" && regularPriceError.innerHTML === "" && promotionalPriceError.innerHTML === "" && StockError.innerHTML === "" && CategoryError.innerHTML === "" && imageError.innerHTML === "") {
                    productForm.submit();
                }
            }
            console.log('form validated')
        </script>

