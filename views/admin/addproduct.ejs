        <section class="content-main">
            <div class="row">
                <div class="col-9">
                    <div class="content-header">
                        <h2 class="content-title">Add New Product</h2>

                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="card mb-4">

                        <div class="card-body">
                            <form method="POST" action="/admin/addproduct" id="productForm"
                                enctype="multipart/form-data">
                                <div class="mb-4">
                                    <label for="product_name" class="form-label">Product Name</label>
                                    <input type="text" placeholder="Type here" class="form-control" id="product_name"
                                        name="productname">
                                    <span class="text-danger" id="productNameError"></span>

                                </div>
                                <div class="mb-4">
                                    <label class="form-label">Description</label>
                                    <textarea placeholder="Type here" class="form-control" rows="4" name="description"
                                        id="description"></textarea>
                                    <span class="text-danger" id="DescriptionError"></span>
                                </div>
                                <div class="mb-4">
                                    <label for="Stock" class="form-label">Stock</label>
                                    <input type="text" placeholder="Type here" class="form-control" id="stock"
                                        name="Stock">
                                    <span class="text-danger" id="StockError"></span>
                                </div>
                                <div class="row">
                                    <div class="col-lg-4">
                                        <div class="mb-4">
                                            <label class="form-label">Original price</label>
                                            <div class="row gx-2">
                                                <input placeholder="$" type="text" class="form-control"
                                                    name="Originalprice" id="Originalprice">
                                                <span class="text-danger" id="OriginalpriceError"></span>
                                            </div>
                                        </div>
                                        <div class="mb-4">
                                            <label class="form-label">Sale price</label>
                                            <div class="row gx-2">
                                                <input placeholder="$" type="text" class="form-control" name="Saleprice"
                                                    id="Saleprice">
                                                <span class="text-danger" id="SalepriceError"></span>
                                            </div>
                                        </div>

                                    </div>
                                </div>


                                <div class="col-sm-6 mb-3">
                                    <label class="form-label">Category</label>
                                    <select class="form-select" name="category" id="category"> 
                                        <option value="" disabled selected>Select Category</option>
                                        <option value="1">Floral</option>
                                        <option value="2">Woody</option>
                                        <option value="3">Oriental</option>
                                        <option value="4">Fruity</option>
                                        <option value="5">Aquatic</option>
                                        <option value="6">Fresh</option>
                                    </select>
                                    <span class="text-danger" id="CategoryError"></span>
                                </div>
                                <div class="col-lg-3">
                                    <div class="card mb-4">
                                        <div class="card-header">
                                            <h4>Media</h4>
                                        </div>
                                        <div class="card-body">
                                           <% for( let i = 0; i < products[i].length; i++ ) { %>
                                           
                                           
                                            <div class="input-upload">
                                                <img src="/productImages/<%= products[i].images %>" alt="Uploaded image">
                                                <input class="form-control" type="file" name="files" multiple
                                                    value="<%= products.images %>">
                
                                            </div>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                                
                                <div>

                                    <button type="submit" class="btn btn-primary btn-sm rounded">Add Product</button>
                                </div>
                        </div>
                    </div>

                </div>
               
            </div>
        </section>
    </main>


    <script>


        var productName = document.getElementById("product_name");
        var description = document.getElementById("description");
        var originalPrice = document.getElementById("Orginalprice");
        var salePrice = document.getElementById("Saleprice");
        var stock = document.getElementById("stock");
        var category = document.getElementById("category");
        var productForm = document.getElementById("productForm");


        let productNameError = document.getElementById('productNameError')
        let DescriptionError = document.getElementById('DescriptionError')
        let OriginalpriceError = document.getElementById('OriginalpriceError');
        let SalepriceError = document.getElementById('SalepriceError')
        let StockError = document.getElementById('StockError')
        let CategoryError = document.getElementById("CategoryError");

        productForm.addEventListener('submit', (e) => {
            if (productName.value.trim() === '' || productName.value === 'null') {

                e.preventDefault();
                productNameError.innerHTML = "productName is required";
            }
            else {
                productNameError.innerHTML = "";
            }


            if (description.value.trim() === '') {
                e.preventDefault();
                DescriptionError.innerHTML = "Description is required";
            } else if (description.value.trim().length <= 20) {
                e.preventDefault();
                DescriptionError.innerHTML = "Description should be more than 20 characters";
            } else {
                DescriptionError.innerHTML = "";
            }


            if (stock.value.trim() === '') {
                e.preventDefault();
                StockError.innerHTML = "Stock quantity is required";
            } else if (isNaN(stock.value.trim()) || stock.value.trim() <= 0) {
                e.preventDefault();
                StockError.innerHTML = "Invalid stock quantity";
            } else {
                StockError.innerHTML = "";
            }


            if (originalPrice.value.trim() === '') {
                e.preventDefault();
                OriginalpriceError.innerHTML = "Original price is required";
            } else if (isNaN(originalPrice.value.trim()) || originalPrice.value.trim() <= 0) {
                e.preventDefault();
                OriginalpriceError.innerHTML = "Invalid original price";
            } else {
                OriginalpriceError.innerHTML = "";
            }


            if (salePrice.value.trim() === '') {
                e.preventDefault();
                SalepriceError.innerHTML = "Sale price is required";
            } else if (isNaN(salePrice.value.trim()) || salePrice.value.trim() <= 0) {
                e.preventDefault();
                SalepriceError.innerHTML = "Invalid sale price";
            } else {
                SalepriceError.innerHTML = "";
            }


            if (category.value.trim() === '') {
                e.preventDefault();
                CategoryError.innerHTML = "Please select a category";
            } else {
                CategoryError.innerHTML = "";
            }


        });

    </script>
