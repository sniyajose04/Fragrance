                                            <th >Action</th>
                                        </tr>
                                 
                                    </thead>
                                
                                    <tbody>
                                        <% for(let i=0;i<products.length;i++) { %>
                                            <tr>
                                                <td class="text-center"><span><%= i+1 %></span></td>
                                                <td width="">
                                                    <a href="#" class="itemside">
                                                        <% for (var j = 0; j< 1; j++) { %>
                                                            <div class="image">
                                                                <img src="/productImages/<%= products[i].images[0].filename %>" width="30px" height="30px" alt="">
                                                            </div>
                                                        <% } %>
                                                    </a>
                                                </td>
                                            <td><%= products[i].producttitle%></td>
                                            <td><%= products[i].Stock %></td>
                                            <td><span><strong style="font-weight: bolder;">&#8377;<%= products[i].regularPrice %></strong></span></td>
                                            <% if (products[i].is_block==false) { %>
                                                <td class="text-success">Publish</td>
                                            <% } else { %>
                                                <td class="text-danger">unpublish</td>
                                            <% } %>
                                            <td class="">

                                                <% if (products[i].is_block==false) { %>
                                                    <button class="btn btn-danger" onclick="publish( '<%= products._id %>')">unpublish</button>
                                                <% } else { %>
                                                    <button class="btn btn-primary" onclick="unpublish('<%= products._id %>')">Publish</button>
                                                <% } %>
                                                 
                                            </td>
                                           
                                            <td>
                                                <a href="/admin/editProduct/<%= products[i]._id %>" class="badge rounded-pill alert-dark">Edit</a>
