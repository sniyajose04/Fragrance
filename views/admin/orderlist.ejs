                    <h2 class="content-title card-title">Order List </h2>

                </div>
                <div>
                    <input type="text" placeholder="Search order ID" class="form-control bg-white">
                </div>
            </div>
            <div class="card mb-4">
                <header class="card-header">
                    <div class="row gx-3">
                        <div class="col-lg-4 col-md-6 me-auto">
                            <input type="text" placeholder="Search..." class="form-control">
                        </div>
                        <div class="col-lg-2 col-6 col-md-3">
                            <select class="form-select">
                                <option>Status</option>
                                <option>Active</option>
                                <option>Disabled</option>
                                <option>Show all</option>
                            </select>
                        </div>
                        <div class="col-lg-2 col-6 col-md-3">
                            <select class="form-select">
                                <option>Show 20</option>
                                <option>Show 30</option>
                                <option>Show 40</option>
                            </select>
                        </div>
                    </div>
                </header> <!-- card-header end// -->
                <% if(order.length){ %>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover" id="myTable">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Total</th>
                                    <th scope="col">Status</th>
                                    <th scope="col"> Order Date</th>
                                    <th scope="col" class="text-end"> Action </th>
                                </tr>
                            </thead>
                            <tbody>
                              
                                <% for ( let i=order.length-1; i >=0; i--) { %>
                                    <tr>
                                        <td><%= order[i].orderId %></td>
                                     
                                        <td><b><%= order[i].userId ? order[i].userId.name : 'No user' %></b></td>
                                        <td><%= order[i].userId ? order[i].userId.email : 'No email' %></td>
                                    
                                        <td><%=order[i].totalAmount %></td>
                                     
                                        <td><%=order[i].orderStatus %></td>
                                           
                                        <td><%= order[i].orderDate.toDateString() %></td>
                                        <td class="text-end">
                                                <div >
                                                    <a  href="/admin/orderDetail?orderId=<%=order[i]._id %>" class="btn-small d-block">View</a>
                                                    
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>                         
                        </table>
                    </div>
                </div>
                <% } %>
            </div>
            
        </section>
