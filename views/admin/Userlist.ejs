        <script>
            function userBlock(userId, index,) {
                const statuschange= document.getElementById(`blockId` + index).textContent.trim();
                console.log(statuschange);
                const Action=statuschange=="Unblock"?'userUnblock':'userBlock';
                Swal.fire({
                    title: "Are you sure?",
                    text: "You won't be able to revert this!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: `Yes, ${Action} it!`
                }).then((result) => {
                    if (result.isConfirmed) {
                        fetch(`/admin/${Action}/${userId}`, {
                            method: 'PATCH',
                            headers: { "Content-Type": "application/json" }
                        })
                            .then(response => { return response.json() })
                            .then(data => {

                                if (data.success) {
                                    console.log(data);
                                    if (data.block) {
                                        const status = document.getElementById(`status` + index)
                                        const color=document.getElementById('color'+index)
                                        color.classList.remove('btn-primary')
                                        color.classList.add('btn-danger')
                                        color.textContent = "Unblock"
                                        status.classList.remove('text-success')
                                        status.classList.add('text-danger')
                                        status.textContent = "Blocked";
                                        Swal.fire({
                                            title: "Unblocked!",
                                            text: "User has been Unblocked.",
                                            icon: "success"
                                        });
                                    } else if (data.block == false) {
                                        const status = document.getElementById(`status` + index)
                                        const color = document.getElementById(`color` + index)
                                        color.classList.remove('btn-danger')
                                        color.classList.add('btn-primary')
                                        color.textContent = "Block"
                                        status.classList.remove('text-danger')
                                        status.classList.add('text-success')
                                        status.textContent = "Unblocked";
                                        Swal.fire({
                                            title: "Unblocked!",
                                            text: "User has been Unblocked.",
                                            icon: "success"
                                        });
                                    } else {
                                        Swal.fire({
                                            title: "Error!",
                                            text: "Failed to block user.",
                                            icon: "error"
                                        });
                                    }
                                }
                            })
                            .catch(error => {
                                Swal.fire({
                                    title: "Error!",
                                    text: error.message,
                                    icon: "error"
                                });
                            });
                    }
                });
            }

            function userUnblock(userId, index) {
                Swal.fire({
                    title: "Are you sure?",
                    text: "You won't be able to revert this!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Yes, Unblock it!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        fetch(`/admin/userUnblock/${userId}`, {
                            method: 'PATCH',
                            headers: { "Content-Type": "application/json" }
                        })
                            .then(response => {
                                if (response.ok) {
                                    return response.json(); // Parse response body as JSON
                                } else {
                                    throw new Error('Failed to Unblock user');
                                }
                            })
                            .then(data => {
                                // Check if the operation was successful
                                if (data.success) {
                                    // Show success message

                                    // Reload the page after 2 seconds
                                    if (data.block == false) {
                                        const status = document.getElementById(`status` + index)
                                        const blockId = document.getElementById(`blockId` + index)
                                        blockId.classList.remove('btn-success')
                                        blockId.classList.add('btn-danger')
                                        blockId.textContent = "Block"
                                        status.classList.remove('text-danger')
                                        status.classList.add('text-success')
                                        status.textContent = "Unblocked";
                                        Swal.fire({
                                            title: "Unblocked!",
                                            text: "User has been Unblocked.",
                                            icon: "success",
                                            showConfirmButton: false
                                        });
                                    }
                                } else {
                                    
                                    Swal.fire({
                                        title: "Error!",
                                        text: "Failed to Unblock user.",
                                        icon: "error"
                                    });
                                }
                            })
                            .catch(error => {
                                
                                Swal.fire({
                                    title: "Error!",
                                    text: error.message,
                                    icon: "error"
                                });
                            });
                    }
                });
            }
        </script>



